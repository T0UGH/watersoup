page{
  background-color: #f5f5f5;
  box-shadow: 0rpx 5rpx 5rpx #888888 inset;
  padding-top: 20rpx;
}
.mask{
  position:fixed;
  z-index: 3;
  height: 100%;
  width: 750rpx;
  top: 0rpx;
  left: 0rpx;
  background-color:rgba(0, 0, 0, 0.3);
}
.section_select{
  color: #FFFFFF;
  background-color: #1EA4FF;
  font-weight: bold;
}
.container{
  padding-left: 0rpx;
  padding-right: 0rpx;
  padding-top: 0rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-top: 20rpx;
}
.time_list{
  height: 840rpx;
  white-space:nowrap;
}
.text_note{
  text-align: center;
  width: 590rpx;
}
.section_note{
  border-bottom: none;
}
.section_blue,.section_white,.section_select,.section_note{
  display: flex;
  border-bottom: 2rpx solid #8E8E8E;
  padding-right: 40rpx;
  padding-top: 35rpx;
  padding-bottom: 30rpx;
  margin: 0rpx;
  margin-top: 0rpx;
  padding-left: 40rpx;
  font-size: 36rpx;
  align-items: center;
}
.section_blue{
  color: #212121;
  background-color: rgb(250,250,255);
}
.section_white{
  color: #212121;
  background-color: rgb(255,255,255);
}
.activity{
  text-align: left;
  width: 270rpx;
}
.time_period{
  text-align: right;
  width: 400rpx;
}
.button_group{
  margin-top: 60rpx;
  height: 70rpx;
  width: 670rpx;
  display: flex;
  text-align: center;
}
.button{
  margin-left:0rpx;
  margin-right:8rpx;
  padding-left:5rpx;
  padding-right:5rpx;
  width: 105rpx;
  background-color: #1EA4FF;
  color: #FFF;
  font-size: 30rpx;
  letter-spacing:3rpx;
  border-radius: 0rpx;  
  height: 70rpx;
  line-height: 70rpx;
  box-shadow: 0rpx 2rpx 2rpx #888888 ; 
}
.dialog_section text {
  flex: 1;
}

.dialog_section input {
  width: 150rpx;
  text-align: right;
}
.dialog_header{
  display:flex;
  padding-top:20rpx;
  padding-bottom:10rpx;
  color:#212121;
  font-size:34rpx;
}
.text_header{
  text-align: center;
  width: 450rpx;
}
.dialog{
  padding: 40rpx;
  margin-top: 200rpx;
  width: 450rpx;
  margin-left: 110rpx;
  height: 600rpx;
  background-color:white;
  opacity:1;
}
.submit {
  background-color:rgb(68,138,255);
  color: #FFF;
  font-size: 32rpx;
  height: 60rpx;
   /*[msg|这个到时候自己改*/
  margin-top: 80rpx;
  line-height: 60rpx;
  box-shadow: 0rpx 5rpx 5rpx #888888 ;
  border-radius:0px;
}
.dialog_section{
  display:flex;
  padding-top:60rpx;
  padding-bottom:10rpx;
  padding-left:20rpx;
  margin-bottom: 20rpx;
  border-bottom:2rpx solid #8E8E8E;
  color:#212121;
  font-size:32rpx;
  align-items:center;
}